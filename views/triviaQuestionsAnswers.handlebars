{{! when the user is on Welcome screen and button 'Tap to Play' is pressed, 
routes to '/triviaQuestionsAnswers' and display this handlebar with quetsions and answers
}}
<div class="container">
<div class="trivia">
  <h1 class="questions">{{{question}}}</h1>
    <div id="answersBox">
      <a type="button"  {{#if a1Right}} href="/trivia/{{attempted}}/{{corrInc}}" class="btn btn-secondary answer" type="button" data-toggle="popover" title="Correct!" data-content="Nice job!" data-placement="top" aria-expanded="false" aria-controls="collapseRight"{{else}} class="btn btn-secondary wrong" type="button"  aria-expanded="false" aria-controls="collapseWrong" href="/trivia/{{attempted}}/{{correct}}"{{/if}}>{{{a1}}}</a>
      <a type="button"  {{#if a2Right}} href="/trivia/{{attempted}}/{{corrInc}}" class="btn btn-secondary answer" type="button" data-toggle="popover" title="Correct!" data-content="Nice job!" data-placement="top" aria-expanded="false" aria-controls="collapseRight"{{else}} class="btn btn-secondary wrong" type="button"  aria-expanded="false" aria-controls="collapseWrong" href="/trivia/{{attempted}}/{{correct}}"{{/if}}>{{{a2}}}</a>
      <a type="button"  {{#if a3Right}} href="/trivia/{{attempted}}/{{corrInc}}" class="btn btn-secondary answer" type="button" data-toggle="popover" title="Correct!" data-content="Nice job!" data-placement="top" aria-expanded="false" aria-controls="collapseRight"{{else}} class="btn btn-secondary wrong"  type="button" aria-expanded="false" aria-controls="collapseWrong" href="/trivia/{{attempted}}/{{correct}}"{{/if}}>{{{a3}}}</a>
      <a type="button"  {{#if a4Right}} href="/trivia/{{attempted}}/{{corrInc}}" class="btn btn-secondary answer" type="button" data-toggle="popover" title="Correct!" data-content="Nice job!" data-placement="top" aria-expanded="false" aria-controls="collapseRight"{{else}} class="btn btn-secondary wrong" type="button" aria-expanded="false" aria-controls="collapseWrong" href="/trivia/{{attempted}}/{{correct}}"{{/if}}>{{{a4}}}</a>
    </div>
    {{!-- <a class="btn btn-primary" href="/trivia/{{attempted}}/{{corrInc}}" type="button">Next</a> --}}
</div>
</div>
  <div class="end-game" >
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#GameModal">End Game</button>
  </div>

<div class="modal fade" id="GameModal" tabindex="-1" aria-labelledby="GameModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="GameModalLabel">Instructions</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to stop playing?</p>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
        <a class="btn btn-secondary" data-bs-dismiss="modal" href="gamessults/:attempted/:correct">Yes</a>
      </div>
    </div>
  </div>
</div>
</div>



