{{! Get '/signup' method in routes  }}
<h1 class="display-4">Sign Up</h1>
<br />
<form action="/signup" method="POST">
  <div class="mb-3">
    <div class="user">
      <label for="username">Username</label>
      <input
        name="username"
        type="text"
        id="username"
        placeholder=""
        value=""
        required=""
      />
      <div class="invalid-feedback">
        Valid Username is required.
      </div>
    </div>
    <div class="pass">
      <label for="password">Password</label>
      <input
        name="password"
        type="password"
        id="password"
        placeholder=""
        value=""
        required=""
      />
      <div class="invalid-feedback">
        Valid password is required.
      </div>
    </div>
    <div class="email">
      <label for="email">Email Address</label>
      <input
        name="email"
        type="email"
        id="email"
        placeholder=""
        value=""
        required=""
      />
      <div class="invalid-feedback">
        Valid email address is required.
      </div>
    </div>
    <div class="fname">
      <label for="fname">First name</label>
      <input
        name="fname"
        type="text"
        id="fname"
        placeholder=""
        value=""
        required=""
      />
      <div class="invalid-feedback">
        Valid first name is required.
      </div>
    </div>
    <div class="lname">
      <label for="lname">Last name</label>
      <input
        name="lname"
        type="text"
        id="lname"
        placeholder=""
        value=""
        required=""
      />
      <div class="invalid-feedback">
        Valid last name is required.
      </div>
    </div>
    <div class="age">
      <label for="age">Age</label>
      <input
        name="age"
        type="number"
        id="age"
        placeholder=""
        value=""
        required=""
        min="1"
        max="120"
      />
      <div class="invalid-feedback">
        Valid age is required.
      </div>
    </div>
    <div class="phone">
      <label for="phone">Phone Number</label>
      <input
        name="phone"
        type="tel"
        id="phone"
        placeholder=""
        value=""
        required=""
      />
      <div class="invalid-feedback">
        Valid phone number is required.
      </div>
    </div>
    <a class="login-link" href="/login">Already have an account? Click here to
      log-in</a>
    <br />
    <button id="login-btn" type="submit" class="btn btn-light">Sign Up</button>
    <button id="backMain" class="btn btn-light"><a href="/">Back to Main Page</a></button>
    {{#if error}}
      <p class={{class}}> {{error}}</p>
    {{/if}}
  </div>

</form>