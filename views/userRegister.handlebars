<div class="center">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-md-9 col-lg-6 col-xl-5">
      <img
        src="https://upload.wikimedia.org/wikipedia/en/2/27/Trivia.png"
        class="img-fluid"
        alt="Sample image"
      />
    </div>
    <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
      <form id="registration-form" method="POST" action="/register">
        <div
          class="divider d-flex flex-row align-items-center justify-content-center justify-content-lg-start"
        >
          <h3 style="margin-bottom:-10px; margin-left:30% ">Register</h3>
        </div>
        <br />

        <!-- Email input -->
        <div class="mb-4">
          <input
            type="email"
            id="emailInput"
            name="emailInput"
            class="form-control form-control-lg"
            placeholder="name@example.com"
          />
          <label class="form-label" for="form3Example3">Email address</label>
        </div>

        <!-- Username input -->
        <div class="mb-4">
          <input
            type="username"
            name="usernameInput"
            id="usernameInput"
            class="form-control form-control-lg"
            placeholder="Enter username"
          />
          <label class="form-label" for="form3Example3">Username</label>
        </div>

        <!-- Password input -->
        <div class="mb-3">
          <input
            type="password"
            name="passwordInput"
            id="passwordInput"
            class="form-control form-control-lg"
            placeholder="Enter password"
          />
          <label class="form-label" for="form3Example4">Password</label>
        </div>

        <div class="text-center text-lg-start mt-4 pt-2">
          <button
            type="submit"
            class="btn btn-primary btn-lg"
            style="padding-left: 2.5rem; padding-right: 2.5rem;margin-left:29%; margin-bottom:10%"
          >Register</button>
        </div>

        {{#if error}}
          <p class="error">{{error}}</p>
        {{/if}}

        <p class="fw-bold mt-2 pt-1">Already have an account?
          <a href="/" class="link-danger">Login</a></p>
      </form>
    </div>
  </div>
</div>
<div class="container-md">
  <!-- Copyright -->
  <footer
    class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"
  >
    <span style="color: gray">
      Copyright Â© 2022. All rights reserved.
    </span>
  </footer>
</div>
